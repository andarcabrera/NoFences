<!DOCTYPE html>
<html>
<head>
  <title>Nofences</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to I18n.t("No Fences"), '/', id: "logo" %>
      <%= link_to_unless I18n.locale == :en, "English", locale: :en  %>
      <%= link_to_unless I18n.locale == :es, "Español", locale: :es  %>
      <%= link_to_unless I18n.locale == :fr, "Français", locale: :fr  %>
      <nav>
        <ul class="nav navbar-nav navbar-right">

          <li><%= link_to I18n.t("Services"), categories_path %></li>
          <li><%= link_to I18n.t("About"), about_path %></li>
          <%# if current_user %>
          <li><%= link_to I18n.t("Login"), signin_path, id: "login-button" %></li>
          <%# else %>
          <li><%= link_to I18n.t("Logout"), signout_path %></li>
          <%# end %>

        </ul>
      </nav>
    </div>
  </header>
<body>
<span>
 <div class="login-container">
  <div class="row">
    <form class="form-signin mg-btm">
      <h3 class="heading-desc">
    <button type="button" class="close pull-right" id="x" aria-hidden="true">×</button>
    Login to NoFences</h3>
    <div class="social-box">
      <div class="row mg-btm">
        <div class="col-md-12">
          <a href="auth/facebook" class="btn btn-primary btn-block">
            <i class="icon-facebook"></i>    Login with Facebook
          </a>
        </div>
      </div>
    </div>

    <div class="main">

    <input type="text" class="form-control" placeholder="Email" autofocus>
    <input type="password" class="form-control" placeholder="Password">

    <span class="clearfix"></span>
    </div>
    <div class="login-footer">
      <div class="row">
        <div class="col-xs-6 col-md-6">
          <div class="left-section">
            <%= link_to "Sign up now", new_user_path %>
          </div>
        </div>
        <div class="col-xs-6 col-md-6 pull-right">
          <button type="submit" class="btn btn-large btn-danger pull-right">Login</button>
        </div>
      </div>
    </div>
  </form>
</div>
</div>


<div id="user-widget">
  <% if current_user %>
    Welcome <strong><%= current_user.first_name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% else %>
  <% end %>
</div>

<%= yield %>
</div>
</span>
</body>
</html>
