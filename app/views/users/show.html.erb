
<div class= "headings row" id="user-container">
  <div class="col-sm-6 user-info">
    <h3>Languages - <%= current_user.display_languages  %></h3>
    <% if current_user && current_user == @user %>
    <h3 id="update"><%= link_to "Update Info", edit_user_path(current_user)%></h3>
    <% end %>
  </div>
  <div class="col-sm-3" style="image" id="user-image"><img class="img-circle" src= <%="http://graph.facebook.com/#{current_user.uid}/picture?type=large" %>><h3><%= current_user.full_name %></h3><br>
  </div>
  <div class="col-sm-3" id="user-details">
  </div>
</div>




<div id="edit-form" class="row">
  <div class="col-lg-3"></div>
  <div class= "col-lg-6" id="edit-user-container">
    <form>
      <button type="button" class="close pull-right" id="x" aria-hidden="true">Ã—</button>
    </form>
    <h2>Update Your Info Here!</h2>
    <p class="errors"></p>
    <div id="edit-user-form-container">
      <form class="user-edit" action="/users/<%= @user.id %>/edit" method="post">
        <div id="new-user-info">
          <label for="user[first_name]"> First Name: </label>
          <input name="user[first_name]" type="text" value=<%=@user.first_name%>><br><br>
          <label for="user[last_name]"> Last Name: </label>
          <input name="user[last_name]" type="text" value=<%=@user.last_name%>><br><br>
          <label for="user[email]"> Email: </label>
          <input name="user[email]" type="text" value=<%=@user.email %>><br><br>
          <label for="laguange[name]"> Languages: </label>
          <% languages = current_user.display_languages %>
          <input name="language[name]" type="text" value=<%=@user.display_languages%>><br><br>
          <button type="submit" class="btn-info" id="form-submit">Update Info</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-lg-3"></div>
</div>

<div class="user-info">
  <% if current_user.uid %>
    <div style="image" id="user-image"><img class="img-circle" src= <%="http://graph.facebook.com/#{current_user.uid}/picture?type=large" %>></div>
  <% else %>
    <div style="image" id="user-image"><%= image_tag current_user.photo_url(:thumb).to_s if current_user.photo_url %></div>
  <% end %>

  <div class="name"><%= current_user.full_name %></div>
  <div class="languages">Languages: <%=current_user.display_languages%></div>
  <div class="membership">Member Since: <%=current_user.created_at.strftime("%B #{current_user.created_at.day.ordinalize}, %Y")  %></div>
  <div class="volunteered">Volunteer total: <%=current_user.count_volunteer_posts%> posts</div>


<div class="row">
  <div class="col-lg-6 current-posts">
    <h3>Current Posts</h3>
  </div>
  <div class="col-lg-6 recent-messages">
    <h3>Recent Messages</h3>
  </div>
</div>


