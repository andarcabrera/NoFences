
<div class= "headings row" id="user-container">
  <div class="col-sm-6 user-info">
    <h3>Languages - <%= @user.display_languages  %></h3>
    <% if current_user && current_user == @user %>
    <h3 id="update"><%= link_to "Update Info", edit_user_path(current_user)%></h3>
    <% end %>
  </div>
  <div class="col-sm-3">
    <h3><%= @user.full_name %></h3><br>
  </div>
  <div class="col-sm-3" id="user-details">
    <h3>Member Since: <%=@user.created_at.strftime("%B #{current_user.created_at.day.ordinalize}, %Y")%></h3>
    <h3>Volunteer total: <%=@user.count_volunteer_posts%> posts</h3>
  </div>
</div>


  <div id="user-image" style="image">
    <% if @user.uid %>
      <img class="img-circle" src= <%="http://graph.facebook.com/#{current_user.uid}/picture?type=large" %>>
    <% else %>
      <%= image_tag @user.photo_url, class: "img-circle" %>
    <% end %>
  </div>





<div id="message-container">

</div>



<div id="edit-form" class="row">
  <div class="col-lg-3"></div>
  <div class= "col-lg-6" id="edit-user-container">
    <form>
      <button type="button" class="close pull-right" id="x" aria-hidden="true">Ã—</button>
    </form>
    <h2>Update Your Info Here!</h2>
   <div class="errors">
    <% if @user.errors %>
      <% @user.errors.full_messages.each do |error| %>
        <ul><%= error %></ul>
      <% end %>
    <% end %>
  </div>
    <div id="edit-user-form-container">
      <form class="user-edit" action="/users/<%= @user.id %>" method="put">
        <div id="new-user-info">
          <label  for="user[first_name]"> First Name: </label>
          <input id="text" name="user[first_name]" type="text" value=<%=@user.first_name%>><br>
          <label for="user[last_name]"> Last Name: </label>
          <input id="text" name="user[last_name]" type="text" value=<%=@user.last_name%>><br>
          <label for="user[email]"> Email: </label>
          <input id="text" name="user[email]" type="text" value=<%=@user.email %>><br>
          <label for="laguange"> Languages(select all that apply) </label>
          <input id="check" type="checkbox" name="language[English]" <% if @user.known_language?("English")%> checked <% end %>> English
          <input id="check" type="checkbox" name="language[Spanish]" <% if @user.known_language?("Spanish")%> checked <% end %>> Spanish
          <input id="check" type="checkbox" name="language[Japanese]" <% if @user.known_language?("Japanese")%> checked <% end %>> Japanese<br>

          <button type="submit" class="btn-info" id="user-form-submit">Update Info</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-lg-3"></div>
</div>


<div class="column-left" id="category-posts-index">
  <h2>Recent Posts</h2>
  <div id="posts-index-container">
    <% @user.posts.each do |post| %>
      <%= render partial: 'user_post_listing', locals: { post: post } %>
    <% end %>
  </div>
</div>

<div class="column-right" id="category-posts-index">
  <h2>Recent Messages</h2>
  <div id="posts-index-container">
    <% @user.chains.each do |chain| %>
      <%= render partial: '/chains/single_chain_listing', locals: { chain: chain } %>
    <% end %>
  </div>
</div>




