
<div class="headings">
	<h1 class="post-title"><%= @post.category.name %> <i class="fa fa-arrow-right"></i> <%= @post.title %></h1>
	<h3 class="subtitle post-show">If you would like to view this post in another <u>language</u> please use the translation tools below.</h3>
</div>

<div id="new-message-container"></div>

<div class="row" id="post-details-container">
	<div class="col-lg-8">
		<div id="post-info">
			<p>SERVICE: <%= @post.title %></p>
			<p>DESCRIPTION: <%= @post.body %></p>
			<p>DATE POSTED: <%= @post.posted_date %></p>
			<p>ZIP: <span id="zip"><%= @post.zip %></span></p>
			<p>VOLUNTEER: <%= @post.author.full_name %></p>
			<% if @post.author_id == current_user.id %>
			<p><span class="edit-delete"><i class="fa fa-pencil"></i></span><%= link_to ' Edit this post', "/categories/#{@category.id}/posts/#{@post.id}/edit" %></p>
			<p><span class="edit-delete"><i class="fa fa-trash-o fa-1x"></span></i><%= link_to " Delete this post", [@category, @post], :method => :delete %></p>
			<% end %>
			<p><span class="post-options"><i class="fa fa-globe fa-1x fa-spin"></i></span> Translate post</p>
			<p><span class="post-options"><i class="fa fa-reply"></i></span> <%= link_to ' Reply to this post', "/categories/#{@category.id}/posts/#{@post.id}/chains/new", id: "reply-link" %></p>
		</div>
	</div>
	<div class="col-lg-4 map">
		<div id="map">
		</div>
	</div>
</div>

<script type="text/javascript">
		var zip = $("#zip").text();
    codeAddress(zip);
</script>
