<div id="category-show-container">

<div class="headings">
<h1><%= @category.name %></h1>
<h3 class="subtitle">Click on any posts to see details or click on the volunteer button if you'd like to add another post.</h3>
<div id="new-post-button" class="btn btn-info" role="button">
	<% if current_user %>
		<%= link_to 'I want to volunteer!', new_category_post_path(@category), id: "volunteer-button" %>
	<% else %>
		<%= link_to 'Signin to volunteer!', signin_path, id: "login-to-post-button"%>
	<% end %>
</div>
</div>




	<div class="column-left" id="category-posts-index">
		<h2>Volunteer Posts</h2>
		<div id="posts-index-container">
		<% @category.posts.each do |post| %>
			<div id="individual-post-listing">
				<h4><%= link_to "#{post.title}", category_post_path(@category,post) %></h4>
				<p><%= post.body %></p>
				<p><%= post.posted_date %></p>
			</div>
		<% end %>
		</div>
	</div>

	<div class="column-right" id="categories-orgs-index">
		<h2>Organizations Available</h2>
			<div id="orgs-index-container">
			<% @category.organizations.each do |org| %>
				<h4><%= link_to "#{org.name}", organization_path(org) %></h4>
				<p><%= org.description %></p>
			<% end %>
			</div>
	</div>
</div>

<div id="new-post-container">
	<div class="row">
    <form class="form-signin mg-btm" action="signin">
      <h3 class="heading-desc">
        <button type="button" class="close pull-right" id="x" aria-hidden="true">Ã—</button>Make A New Post</h3>

      		<div class="main">
        		<p>New Post Here!</p>
		        <input name="session[email]" type="text" class="form-control" placeholder="Title" autofocus>
		        <input name="session[password]" type="password" class="form-control" placeholder="Description">

		        <span class="clearfix"></span>
		      </div>
		      <div class="login-footer">
		        <div class="row">
		          <div class="col-xs-6 col-md-6">
		            <div class="left-section">
		              <%= link_to "Sign up now", new_user_path %>
		            </div>
		          </div>
		          <div class="col-xs-6 col-md-6 pull-right">
		            <button type="submit" class="btn btn-large btn-danger pull-right" id="login-submit">Post</button>
			        </div>
		        </div>
		      </div>
		</form>
	</div>
</div>
