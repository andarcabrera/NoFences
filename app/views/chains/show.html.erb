<div class="row">
  <div id="user-messages">
    <h2>REPLY</h2>
    <%@chain.messages.last(2).reverse.each do |message|  %>
      <div id="message">
        <p><b>To:</b> <%=message.receiver.full_name %></p>
        <p><b>From:</b> <%=message.sender.full_name %></p>
        <p><b>Subject:</b> <%=message.subject%></p>
        <p><%= message.body %></p>

      </div>
    <% end %>

    <form class="mg-btm" id="new-reply-form" action="/categories/<%= @category.id %>/posts/<%= @post.id %>/chains/<%= @chain.id %>/messages" method="post">
    <div class="errors"></div>
    <div id="reply-main">
      <input name="message[subject]" type="text" class="form-control" value="<%=@chain.messages.last.subject%>" autofocus>
      <br>
      <textarea name="message[body]" class="form-control" placeholder="write reply here" cols="50" rows="8"></textarea>
      <span class="clearfix"></span>
      <button type="submit" class="btn btn-danger" id="new-reply-submit">Reply</button>
    </div>

    </div>
  </div>
  </div>
  </form>
</div>

  </div>
</div>
